from tkinter import *
from PIL import Image,ImageTk

def User1():
    obj2=Toplevel()
    back_user1image = Image.open('images/image7.jpeg')
    back_user1image_resize = back_user1image.resize((700, 400), Image.LANCZOS)
    final_back2 = ImageTk.PhotoImage(back_user1image_resize)
    label_set_image = Label(obj2, image=final_back2, bd=0)
    label_set_image.place(x=0, y=0)

    icon1_image = Image.open('images/image7.jpeg')
    icon1_image_resize = icon1_image.resize((90, 90), Image.LANCZOS)
    final_icon1 = ImageTk.PhotoImage(icon1_image_resize)
    obj2.iconphoto(False, final_icon1)

    gadgets_panel = Label(obj2,fg='black', text='Gadgets', font='coachin 20 bold')
    gadgets_panel.place(x=300, y=20)

    gadgets_entry1 = Label(obj2, bg='black',fg='white', text='Television', font='coachin 16 bold')
    gadgets_entry1.place(x=305, y=120)

    gadgets_entry2 = Label(obj2, bg='black', fg='white', text='Mobile Phones', font='coachin 16 bold')
    gadgets_entry2.place(x=286, y=210)

    gadgets_entry3 = Label(obj2, bg='black', fg='white', text='Headphones', font='coachin 16 bold')
    gadgets_entry3.place(x=292, y=300)

    obj2.geometry('700x400+210+120')
    obj2.title('Gadgets')
    obj2.resizable(False,False)
    obj2.mainloop()


