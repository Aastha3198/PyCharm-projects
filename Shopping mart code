from tkinter import Checkbutton,messagebox

root=Tk()

def sign_up():
    root.destroy()
    obj1=Tk()
    back_image = Image.open('images/image1.jpg')
    back_image_resize = back_image.resize((890, 490), Image.LANCZOS)
    final_back = ImageTk.PhotoImage(back_image_resize)
    label_set = Label(obj1, image=final_back, bd=0.5)
    label_set.place(x=5, y=5)

    icon_image = Image.open('images/image2.png')
    icon_image_resize = icon_image.resize((90, 90), Image.LANCZOS)
    final_icon = ImageTk.PhotoImage(icon_image_resize)
    obj1.iconphoto(False, final_icon)

    heading = Label(obj1, bg='red', fg='white', text='Shopping Mart', font='coachin 20 bold')
    heading.place(x=340, y=20)

    item1 = Button(obj1, highlightbackground='red', bg='yellow', fg='black', text='Gadgets', font='coachin 16 bold',cursor='hand2',command=User1)
    item1.place(x=160, y=100, width=100, height=40)
    item1_image = Image.open('images/image3.jpg')
    item1_image_resize = item1_image.resize((90, 90), Image.LANCZOS)
    final_item1_image = ImageTk.PhotoImage(item1_image_resize)
    label_set1 = Label(obj1, image=final_item1_image, bd=0)
    label_set1.place(x=30, y=75)

    item2 = Button(obj1, highlightbackground='red', bg='yellow', fg='black', text='Grocery', font='coachin 16 bold',cursor='hand2',command=User2)
    item2.place(x=160, y=250, width=100, height=40)
    item2_image = Image.open('images/image4.png')
    item2_image_resize = item2_image.resize((90, 90), Image.LANCZOS)
    final_item2_image = ImageTk.PhotoImage(item2_image_resize)
    label_set2 = Label(obj1, image=final_item2_image, bd=0)
    label_set2.place(x=30, y=220)

    item3 = Button(obj1, highlightbackground='red', bg='yellow', fg='black', text='Clothes', font='coachin 16 bold',cursor='hand2',command=User3)
    item3.place(x=160, y=400, width=100, height=40)
    item3_image = Image.open('images/image5.jpg')
    item3_image_resize = item3_image.resize((90, 90), Image.LANCZOS)
    final_item3_image = ImageTk.PhotoImage(item3_image_resize)
    label_set3 = Label(obj1, image=final_item3_image, bd=0)
    label_set3.place(x=30, y=375)

    item4 = Button(obj1, highlightbackground='red', bg='yellow', fg='black', text='Accessaries', font='coachin 16 bold',cursor='hand2',command=User4)
    item4.place(x=530, y=250, width=140, height=40)
    item4_image = Image.open('images/image6.jpg')
    item4_image_resize = item4_image.resize((90, 90), Image.LANCZOS)
    final_item4_image = ImageTk.PhotoImage(item4_image_resize)
    label_set4 = Label(obj1, image=final_item4_image, bd=0)
    label_set4.place(x=410, y=220)

    obj1.geometry('900x500+210+120')
    obj1.title('Shopping Mart')
    obj1.resizable(False, False)
    obj1.mainloop()

image=Image.open('images/background1.jpg')
image_resize=image.resize((900,500),Image.LANCZOS)
final=ImageTk.PhotoImage(image_resize)
label=Label(root,image=final,bd=0)
label.place(x=0,y=0)

f1=Frame(root,bg='lightblue')
f1.place(x=300,y=90,width=320,height=350)

l1=Label(f1,text='Login Panel',bg='lightblue',fg='black',font='coachin 20 bold').place(x=90,y=5)
l2=Label(f1,text='Name:',bg='lightblue',fg='black',font='coachin 14 bold').place(x=10,y=70)
l3=Label(f1,text='Email Id:',bg='lightblue',fg='black',font='coachin 14 bold').place(x=10,y=130)
l4=Label(f1,text='Password:',bg='lightblue',fg='black',font='coachin 14 bold').place(x=10,y=190)
l2_entry=Entry(f1,font='coachin 14 bold').place(x=120,y=70,width=190)
l3_entry=Entry(f1,font='coachin 14 bold').place(x=120,y=130,width=190)
l4_entry=Entry(f1,font='coachin 14 bold').place(x=120,y=190,width=190)
b1=Button(f1,font='coachin 14 bold',bg='black',fg='white',text='Sign up',cursor='hand2',command=sign_up)
b1.place(x=120,y=250,width=100)

root.title('Login to Shopping Mart')
root.geometry('900x500+200+100')
root.resizable(False,False)
root.mainloop()
